#include <iostream>
using namespace std;
int checkPrime(int num)
{
    int count =0;
    for(int i=2; i<=num/2; i++)
    {
        if(num%i==0)
        {
            count=1;
            break;
        }
    }
    if(num==1) count=1;
    return count;
}
int main()
{
    int m, n, j=0;
    float sum,avg;
    printf("Enter Starting Value of the range");
    scanf("%d", &m);
    printf("Enter ending Value of the range");
    scanf("%d", &n);
    printf("prime number from %d to%d are:", m, n);
    for(i=m; i<=n; i++)
    {
        if(checkprime(i)==0)
        {
            printf("%d/t",i);
            sum=sum+i;
            j=++j;
        }
    }
    avg=sum/j;
    printf("\n Average of prime number %.2f", avg);
    getch();
    return 0;    
}           
